<form action="/restaurants/{{restaurant._id}}?_method=PUT" method="POST">
<div class="mb-3">
      <label for="name">餐廳名稱</label>
      <input type="text" class="form-control" id="name" placeholder="請輸入餐廳名稱" name="name" value="{{restaurant.name}}" required>
    </div>
    <div class="mb-3">
      <label for="name_en">英文名稱</label>
      <input type="text" class="form-control" id="name_en" placeholder="請輸入餐廳名稱" name="name_en" value="{{restaurant.name_en}}" required>
    </div>
    <div class="mb-3">
      <label for="category">分類</label>
      <input type="text" class="form-control" id="category" placeholder="請輸入餐廳分類" name="category" value="{{restaurant.category}}" required>
    </div>
    <div class="mb-3">
      <label for="image">餐廳圖片</label>
      <input type="url" class="form-control" id="image" placeholder="請輸入圖片連結" name="image" value="{{restaurant.image}}" required>
    </div>
    <div class="mb-3">
      <label for="location">地址</label>
      <input type="text" class="form-control" id="location" placeholder="請輸入地址" name="location" value="{{restaurant.location}}" required>
    </div>
    <div class="mb-3">
      <label for="phone">電話</label>
      <input type="tel" class="form-control" id="phone" placeholder="請輸入電話號碼" name="phone" value="{{restaurant.phone}}" required>
    </div>
    <div class="mb-3">
      <label for="google_map">Google地圖</label>
      <input type="url" class="form-control" id="google_map" placeholder="請輸入Google地圖連結" name="google_map" value="{{restaurant.google_map}}" required>
    </div>
    <div class="mb-3">
      <label for="rating">餐廳評分</label>
      <input type="number" class="form-control" id="rating" placeholder="請輸入評分" min="0" max="5" step="0.1" name="rating" value="{{restaurant.rating}}" require>
    </div>
    <div class="mb-3">
      <label for="description">描述</label>
      <textarea  class="form-control" id="description" placeholder="請輸入餐廳描述" name="description" value="{{restaurant.description}}" required>
          </textarea>
    </div>
    <div>
      <button type="submit" class="btn btn-primary">新增</button>
      <a href="/">返回</a>
    </div>
</form>